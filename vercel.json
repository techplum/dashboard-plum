{
  "functions": {
    "api/admin-images.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/admin-images/(.*)",
      "destination": "/api/admin-images"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/admin-images/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, access-administrative-image"
        }
      ]
    }
  ]
}
